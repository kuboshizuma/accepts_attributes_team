.container.row
  .col-lg-8
    - @teams.each do |team|
      .team_box
        = link_to team_path(team), class: "team_box_inner" do
          %p= "チーム名: #{team.name}"
          %p= "チーム詳細: #{team.description}"
        = link_to 'チームを編集する', edit_team_path(team), class: "edit_team"
    = link_to 'チームを作成する', new_team_path
